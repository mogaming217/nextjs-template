{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".next/static",
    "rewrites": [
      {
        "source": "**/**",
        "run": {
          "serviceId": "renderer",
          "region": "asia-northeast1"
        }
      }
    ],
    "postdeploy": [
      "npm run gcloud:build",
      "npm run gcloud:run"
    ]
  }
}
