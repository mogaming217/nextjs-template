{
  "name": "custom-server-typescript",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf .next && rm -rf dist",
    "dev": "npm run copy-static && cross-env APP_ENV=local nodemon",
    "deploy": "npm run build && firebase deploy",
    "deploy:dev": "firebase use default && cross-env APP_ENV=dev npm run deploy",
    "build": "npm run clean && npm run build:next && npm run build:server",
    "build:next": "next build && npm run copy-static",
    "build:server": "tsc --project tsconfig.server.json",
    "start:localDocker": "cross-env APP_ENV=local npm run build && docker build -t nextjssample . && docker run -e PORT=3000 -e APP_ENV=local -p 3000:3000 nextjssample",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "copy-static": "cpx \"public/{**,.**}/{*,.*}\" \".next/static\"",
    "gcloud:build": "gcloud --project $GCLOUD_PROJECT builds submit --tag gcr.io/$GCLOUD_PROJECT/renderer",
    "gcloud:run": "gcloud --project $GCLOUD_PROJECT beta run deploy renderer --platform managed --region asia-northeast1 --set-env-vars TZ=Asia/Tokyo,APP_ENV=$APP_ENV --image gcr.io/$GCLOUD_PROJECT/renderer",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.14.4",
    "firebase-admin": "^8.12.1",
    "next": "^9.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "typescript-styled-plugin": "^0.15.0"
  }
}
